{
  "name": "api-boilerplate",
  "version": "0.1.0",
  "description": "API Boilerplate",
  "main": "index.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon ./node_modules/.bin/run-s lint start",
    "lint": "eslint ./src --ext .js",
    "lint:test": "eslint ./test --ext .js",
    "lint:md": "markdownlint *.md --config markdown.json",
    "test": "npm run lint:test && jest ./test/.*.test.js --runInBand --verbose",
    "checks": "run-s lint lint:* && jest ./test/.*.test.js && npm outdated",
    "build:docs": "echo \"Error: no command specified\" && exit 1",
    "update:packages": "rm -rf node_modules && rm package-lock.json && npm update --save/save-dev && npm install && npm outdated"
  },
  "author": "Rafa Mel",
  "license": "MIT",
  "dependencies": {
    "axios": "^0.17.1",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "cors": "^2.8.4",
    "dotenv-safe": "^4.0.4",
    "express": "^4.16.2",
    "helmet": "^3.9.0",
    "joi": "^13.0.2",
    "joi-add": "^0.6.0-0",
    "jsonwebtoken": "^8.1.0",
    "knex": "^0.14.2",
    "moment": "^2.19.3",
    "morgan": "^1.9.0",
    "ms": "^2.1.1",
    "objection": "^0.9.2",
    "objection-before-and-unique": "^0.3.3",
    "passport": "^0.4.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^3.0.1",
    "pg": "^7.4.0",
    "rand-token": "^0.4.0",
    "request-validation": "^0.1.1-0"
  },
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "@types/joi": "^13.0.3",
    "eslint": "^4.11.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-plugin-node": "^5.2.1",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest-cli": "^21.2.1",
    "markdownlint-cli": "^0.5.0",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true
  }
}
