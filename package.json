{
  "name": "rest-api-boilerplate",
  "description": "API Boilerplate",
  "version": "0.1.0",
  "author": "Rafa Mel",
  "license": "MIT",
  "main": "index.js",
  "scripts": {
    "precommit": "MSG='Committing in:' npm run validate",
    "docker": "npm run --prefix ./docker",
    "start": "NODE_ENV=production pm2 start index.js --name rest-api",
    "stop": "pm2 stop rest-api",
    "dev": "nodemon -w ./src -w ./config -x \"clear && (npm run lint:src & node index.js)\"",
    "test": "NODE_ENV=test npm run lint:test && jest ./test/.*.test.js --runInBand",
    "test:watch": "nodemon -w ./test -x \"clear && npm t\"",
    "fix": "prettier --ignore-path .gitignore --write \"*/**/*.json\" \"**/*.{js,md}\"",
    "lint:src": "eslint ./src --ext .js --ignore-path .gitignore",
    "lint:test": "eslint ./test --ext .js --ignore-path .gitignore",
    "lint:md": "markdownlint *.md --config markdown.json",
    "validate": "run-s lint:src lint:md test outdated",
    "update": "npm update --save/save-dev && npm outdated",
    "outdated": "if !(npm outdated) && [ -n \"$MSG\" ]; then printf \"\n\" && for i in `seq 0 8`; do sleep 1 && printf '\r%s %2d' \"$MSG\" \"$((8-i))\"; done; fi;"
  },
  "dependencies": {
    "babel-plugin-root-import": "^5.1.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-register": "^6.26.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.2",
    "compression": "^1.7.1",
    "config": "^1.29.4",
    "cors": "^2.8.4",
    "dotenv-cli": "^1.4.0",
    "dotenv-safe": "^5.0.1",
    "express": "^4.16.2",
    "helmet": "^3.9.0",
    "joi": "^13.0.2",
    "joi-add": "^0.6.0-0",
    "jsonwebtoken": "^8.1.0",
    "knex": "0.14.2",
    "moment": "^2.19.3",
    "morgan": "^1.9.0",
    "ms": "^2.1.1",
    "objection": "^1.0.0",
    "objection-before-and-unique": "^0.4.0",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.1",
    "pg": "^7.4.0",
    "pm2": "^2.10.1",
    "pm2-docker": "^2.1.0",
    "request-validation": "^0.1.2-0",
    "winston": "^2.4.0"
  },
  "devDependencies": {
    "@types/jest": "^22.1.3",
    "@types/joi": "^13.0.3",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.0",
    "eslint": "^4.18.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-jest": "^21.3.2",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-standard": "^3.0.1",
    "husky": "^0.14.3",
    "jest-cli": "^22.4.0",
    "markdownlint-cli": "^0.7.1",
    "nodemon": "^1.12.1",
    "npm-run-all": "^4.1.1",
    "prettier": "^1.10.2"
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}"
    ],
    "coveragePathIgnorePatterns": [
      "<rootDir>/test/"
    ]
  }
}